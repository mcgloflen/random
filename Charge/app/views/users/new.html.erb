<%= form_for @user, html: {id: "payment_form" } do |f| %>

<%= f.hidden_field :stripeToken %>

    <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>
    
    <div class="field">
        <%= label_tag :card_number, "Credit Card Number" %>
        <%= text_field_tag :card_number, nil, name: nil, id: "card_number" %>
    </div>
    <div class="field">
        <%= label_tag :cvc, "Security Code on Card (CVC)" %>
        <%= text_field_tag :cvc, nil, name: nil, id: "cvc" %>
    </div>
    <div class="field">
        <%= label_tag :exp_month, "Card Expiration" %>
        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "exp_month"} %>
        <%= select_year nil, {start_year: Date.today.year+1, end_year: Date.today.year+15}, {name: nil, id: "exp_year"} %>
    </div>
    
    <div class="actions">
        <%= f.submit "Subscribe" %>
    </div>
<% end %>